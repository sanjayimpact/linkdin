<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Scrape Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 40px;
    }
    .badge-missing {
      background-color: #e9ecef;
      color: #6c757d;
      font-size: 0.85em;
    }
    th {
      background-color: #032b5f;
      color: white;
      vertical-align: middle;
    }
    td {
      vertical-align: top;
    }
    .card-header {
      background-color: #032b5f;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card shadow-sm">
      <div class="card-header text-center">
        <h3>Scraped LinkedIn Profiles</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="text-center">
              <tr>
                <th>URL</th>
                <th>Name</th>
                <th>Job Title</th>
                <th>Headline</th>
                <th>Location</th>
               
              </tr>
            </thead>
            <tbody>
              <% results.forEach(data => { %>
                <tr>
                  <td><a href="<%= data.url %>" target="_blank"><%= data.url %></a></td>
                  <td><%= data.name || '<span class="badge badge-missing">N/A</span>' %></td>
                  <td><%= data.jobTitle || '<span class="badge badge-missing">N/A</span>' %></td>
                  <td><%= data.headline || '<span class="badge badge-missing">N/A</span>' %></td>
                  <td><%= data.location || '<span class="badge badge-missing">N/A</span>' %></td>
                
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="text-center mt-4">
          <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
