<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>LinkedIn Scraper</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 60px;
    }
    .form-box {
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0,0,0,0.05);
      margin-bottom: 40px;
    }
    h2 {
      font-weight: 600;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Targeted Profile Scraper Form -->
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-box">
          <h2 class="text-center">LinkedIn Profile Scraper</h2>
          <form action="/scrape" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">LinkedIn Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your LinkedIn email" required>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">LinkedIn Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your LinkedIn password" required>
            </div>

            <div class="mb-3">
              <label for="target" class="form-label">Target Keyword (e.g., SaaS, Founder, Delhi)</label>
              <input type="text" class="form-control" id="target" name="target" placeholder="Enter target keyword to match">
            </div>

            <button type="submit" class="btn btn-primary w-100">Start Scraping</button>
          </form>
        </div>
      </div>
    </div>

